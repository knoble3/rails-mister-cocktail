<div class="container">
  <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1568861280543-0961ffecdbb8?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=800&q=80);">
    <div class="banner-container">
      <h1>Add An Ingredient</h1>
    </div>
  </div>
  <section id="cover" class="min-vh-100">
    <div id="cover-caption">
      <div class="container">
        <div class="row text-black">
          <div class="col-xl-5 col-lg-6 col-md-8 col-sm-10 mx-auto text-center form p-4">
            <%= simple_form_for [@cocktail, @dose] do |f| %>
            <%= f.input :ingredient, collection: Ingredient.order(:name), selected: :ingredient, prompt: "Pick one from list" %>
            <%= f.input :description, :label => "Amount" %>
            <%= f.submit "Submit", class: "btn btn-outline-primary" %>
            <%= link_to "Go back", cocktails_path, class: "btn btn-outline-warning btn-sm" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
