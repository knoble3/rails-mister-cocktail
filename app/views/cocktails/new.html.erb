<div class="container">
  <h1>Add new cocktail</h1>
  <div class="row">
    <div class="col-xs-12 col-md-6 col-md-offset-3">
        <%= simple_form_for @cocktail do |f| %>
          <%= f.input :name %>
          <%= f.input :description %>
          <%= f.submit "Submit", class: "btn btn-outline-primary" %>
        <% end %>
        <div class="path">
          <%= link_to "Go back", cocktails_path, class: "btn btn-outline-warning btn-sm" %>
        </div>
    </div>
  </div>
</div>
